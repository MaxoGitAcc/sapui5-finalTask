<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="AddProductDialog" title="Add new Product" contentWidth="400px">

        <VBox class="sapUi-Std-PaddingS">
            <Input id="newProductName" placeholder="Name" value="{oDataV2Model>Name}" liveChange=".onLiveValidationChange"/>
            <Input id="newProductDescription" placeholder="Description" value="{oDataV2Model>Description}" liveChange=".onLiveValidationChange"/>

            <DatePicker id="newProductReleaseDate" placeholder="ReleaseDate"
                displayFormat="dd-MM-yyyy"  valueFormat="yyyy-MM-dd" 
                dateValue="{oDataV2Model>ReleaseDate}" change=".onLiveValidationChange"/>

            <DatePicker id="newProductDiscontinuedDate" placeholder="DiscontinuedDate"
                displayFormat="dd-MM-yyyy"  valueFormat="yyyy-MM-dd" 
                dateValue="{oDataV2Model>DiscontinuedDate}" change=".onLiveValidationChange"/>
            
            <Input id="newProductRating" placeholder="Ratin" type="Number" value="{oDataV2Model>Rating}" liveChange=".onLiveValidationChange"/>
            <Input id="newProductPrice" placeholder="Price" type="Number" value="{oDataV2Model>Price}" liveChange=".onLiveValidationChange"/>
        </VBox>

        <beginButton>
            <Button text="Save" press=".onSaveDialogBtnPress"/>
        </beginButton>

        <endButton>
            <Button text="Cancel" press=".onCancelDialogBtnPress"/>
        </endButton>

    </Dialog>

</core:FragmentDefinition>