<mvc:View controllerName="project1.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <Toolbar class="sapUiSmallMarginTop sapUiSmallMarginBottom">      
                <ToolbarSpacer />
                <SearchField width="20%" placeholder="{i18n>searchFieldPlaceholder}" liveChange=".onSearch" id="searchField"/>
                <Button icon="sap-icon://filter" text="{i18n>filterBtnText}" type="Emphasized" press=".onFilterBtnPress"/>
                <Button text="{i18n>addProductBtnText}" type="Accept" press=".onAddProductBtnPress"/>
            </Toolbar>

            <List id="productList" items="{oDataV2Model>/Products}" growing="true">

                <items>
                    <ObjectListItem title="{oDataV2Model>Name}"
                        number="{oDataV2Model>Price}$"
                        type="Active" press=".onListProductPressed">

                        <attributes>
                            <ObjectAttribute text="{oDataV2Model>Description}" />
                        </attributes>

                    </ObjectListItem>
                </items>

            </List>
        </content>
    </Page>
</mvc:View>