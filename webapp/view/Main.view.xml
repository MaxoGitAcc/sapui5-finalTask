<mvc:View xmlns:tnt="sap.tnt" controllerName="project1.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <Toolbar class="sapUiSmallMarginTop sapUiSmallMarginBottom">
                <SearchField width="30%" placeholder="Search..." liveChange=".onSearch" id="searchField"/>
                <ToolbarSpacer />
                <Button text="Add Product" type="Accept" press=".onAddProductBtnPress"/>
                <Button text="Delete Product" type="Reject" press=".onDeleteProductBtnPress"/>
            </Toolbar>

            <List id="productList" items="{oDataV2Model>/Products}" growing="true" mode="MultiSelect">

                <items>
                    <ObjectListItem title="{oDataV2Model>Name}"
                        number="{oDataV2Model>Price}"
                        numberUnit="USD" type="Navigation">

                        <attributes>
                            <ObjectAttribute text="{oDataV2Model>Description}" />
                        </attributes>

                    </ObjectListItem>
                </items>

            </List>
        </content>
    </Page>
</mvc:View>