<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="EditProductDialog" title="{i18n>editProductDialogTitle}" contentWidth="400px">

        <VBox class="sapUi-Std-PaddingS">
            <Input id="EditedProductName" placeholder="{i18n>nameInputPlaceholder}" value="{oDataV2Model>Name}" liveChange=".onLiveValidationChangeEM"/>
            <Input id="EditedProductDescription" placeholder="{i18n>descriptionInputPlaceholder}" value="{oDataV2Model>Description}" liveChange=".onLiveValidationChangeEM"/>

            <DatePicker id="EditedProductReleaseDate" placeholder="{i18n>releaseDateInputPlaceholder}"
                displayFormat="dd-MM-yyyy"  valueFormat="yyyy-MM-dd" 
                dateValue="{oDataV2Model>ReleaseDate}" change=".onLiveValidationChangeEM"/>

            <DatePicker id="EditedProductDiscontinuedDate" placeholder="{i18n>discontinuedDateInputPlaceholder}"
                displayFormat="dd-MM-yyyy"  valueFormat="yyyy-MM-dd" 
                dateValue="{oDataV2Model>DiscontinuedDate}" change=".onLiveValidationChangeEM"/>
            
            <Input id="EditedProductRating" placeholder="{i18n>ratingInputPlaceholder}" type="Number" value="{oDataV2Model>Rating}" liveChange=".onLiveValidationChangeEM"/>
            <Input id="EditedProductPrice" placeholder="{i18n>priceInputPlaceholder}" type="Number" value="{oDataV2Model>Price}" liveChange=".onLiveValidationChangeEM"/>
        </VBox>

        <beginButton>
            <Button text="{i18n>saveDialogBtnText}" press=".onSaveEditBtn"/>
        </beginButton>

        <endButton>
            <Button text="{i18n>cancelDialogBtnText}" press=".onCanelEditBtn"/>
        </endButton>

    </Dialog>

</core:FragmentDefinition>