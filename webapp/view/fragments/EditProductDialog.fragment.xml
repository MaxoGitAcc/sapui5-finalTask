<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="EditProductDialog" title="Edit Product Detail" contentWidth="400px">

        <VBox class="sapUi-Std-PaddingS">
            <Input id="EditedProductName" placeholder="Name" value="{oDataV2Model>Name}" liveChange=".onLiveValidationChangeEM"/>
            <Input id="EditedProductDescription" placeholder="Description" value="{oDataV2Model>Description}" liveChange=".onLiveValidationChangeEM"/>

            <DatePicker id="EditedProductReleaseDate" placeholder="ReleaseDate"
                displayFormat="dd-MM-yyyy"  valueFormat="yyyy-MM-dd" 
                dateValue="{oDataV2Model>ReleaseDate}" change=".onLiveValidationChangeEM"/>

            <DatePicker id="EditedProductDiscontinuedDate" placeholder="DiscontinuedDate"
                displayFormat="dd-MM-yyyy"  valueFormat="yyyy-MM-dd" 
                dateValue="{oDataV2Model>DiscontinuedDate}" change=".onLiveValidationChangeEM"/>
            
            <Input id="EditedProductRating" placeholder="Ratin" type="Number" value="{oDataV2Model>Rating}" liveChange=".onLiveValidationChangeEM"/>
            <Input id="EditedProductPrice" placeholder="Price" type="Number" value="{oDataV2Model>Price}" liveChange=".onLiveValidationChangeEM"/>
        </VBox>

        <beginButton>
            <Button text="Save" press=".onSaveEditBtn"/>
        </beginButton>

        <endButton>
            <Button text="Cancel" press=".onCanelEditBtn"/>
        </endButton>

    </Dialog>

</core:FragmentDefinition>